import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
         long w = sc.nextLong();
        if( w % 2 == 0){
            System.out.println("YES");
        }
        else{
            System.out.println("NO");
        }
    }
}
